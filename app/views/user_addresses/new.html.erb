<h1 class="page-title">Enter Your Address</h1>

<div class="form-container">
  <%= form_with model: @user_address do |f| %>

    <div class="form-group">
      <%= f.label :country, "Country" %>
      <%= f.text_field :country, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :state, "State" %>
      <%= f.text_field :state, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :dist, "District" %>
      <%= f.text_field :dist, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :block, "Block" %>
      <%= f.text_field :block, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :town, "Town" %>
      <%= f.text_field :town, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :gali_no, "Street Number" %>
      <%= f.number_field :gali_no, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :house_no, "House Number" %>
      <%= f.number_field :house_no, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.submit "Save Address", class: "submit-button" %>
    </div>

  <% end %>
</div>