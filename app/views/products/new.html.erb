<%= flash[:notice] %>

<h1 class="page-title">Add Product</h1>

<%= form_with model: @product, html: { class: "product-form" } do |f| %>
  
  <!-- Category Selection -->
  <div class="field category-field">
    <label>Category:</label><br>
    <% ["Electronic", "Cloth", "Food", "Decoration", "Fashion", "Jewelry", "Book"].each do |category| %>
      <label class="radio-label">
        <%= f.radio_button :category, category, class: "category-radio" %> <%= category %>
      </label>
    <% end %>
  </div>

  <!-- Product Name -->
  <div class="field">
    <%= f.label :product_name, "Product Name:", class: "field-label" %>
    <%= f.text_field :product_name, class: "input-field" %>
  </div>

  <!-- Brand Name -->
  <div class="field">
    <%= f.label :brand_name, "Brand Name:", class: "field-label" %>
    <%= f.text_field :brand_name, class: "input-field" %>
  </div>

  <!-- Product Type -->
  <div class="field">
    <%= f.label :product_type, "Product Type:", class: "field-label" %>
    <%= f.text_field :product_type, class: "input-field" %>
  </div>

  <!-- Price -->
  <div class="field">
    <%= f.label :price, "Price (â‚¹):", class: "field-label" %>
    <%= f.number_field :price, class: "input-field" %>
  </div>

  <!-- Product Image -->
  <div class="field">
    <%= f.label :image, "Upload Image:", class: "field-label" %>
    <%= f.file_field :image, class: "file-input" %>  
  </div>

  <!-- Submit Button -->
  <div class="field">
    <%= f.submit "Add Product", class: "btn submit-btn" %>
  </div>
  
<% end %>