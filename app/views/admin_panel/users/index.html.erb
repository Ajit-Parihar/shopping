<div class="users-container">
  <h1>Show All Users</h1>

  <ul class="user-list">
    <% @users.each do |user| %>
      <li class="user-item">
        <span class="user-name"><%= user.first_name %></span>
        
        <div class="btn-container">
          <%= link_to "Edit",admin_panel_users_path, class: "btn btn-edit" %>
          <%= link_to "Delete", admin_panel_delete_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

