<h1 class="page-title">Edit Product</h1>

<div class="edit-product-container">
  <%= form_with model: @product, url: seller_update_product_path(@product), method: :post, local: true do |f| %>
    
    <!-- Category Selection -->
    <div class="field category-section">
      <label class="category-label">Select Category</label><br>
      <div class="category-options">
        <%= f.radio_button :category, "Electronic", checked: @product.category == "Electronic", class: "radio-btn" %> <span>Electronic</span>
        <%= f.radio_button :category, "Cloth", checked: @product.category == "Cloth", class: "radio-btn" %> <span>Cloth</span>
        <%= f.radio_button :category, "Food", checked: @product.category == "Food", class: "radio-btn" %> <span>Food</span>
        <%= f.radio_button :category, "Decoration", checked: @product.category == "Decoration", class: "radio-btn" %> <span>Decoration</span>
        <%= f.radio_button :category, "Fashion", checked: @product.category == "Fashion", class: "radio-btn" %> <span>Fashion</span>
        <%= f.radio_button :category, "Jewelry", checked: @product.category == "Jewelry", class: "radio-btn" %> <span>Jewelry</span>
        <%= f.radio_button :category, "Book", checked: @product.category == "Book", class: "radio-btn" %> <span>Book</span>
      </div>
    </div>

    <!-- Product Name -->
    <div class="field">
      <%= f.label :product_name, class: "form-label" %>
      <%= f.text_field :product_name, class: "form-input" %>
    </div>

    <!-- Brand Name -->
    <div class="field">
      <%= f.label :brand_name, class: "form-label" %>
      <%= f.text_field :brand_name, class: "form-input" %>
    </div>

    <!-- Product Type -->
    <div class="field">
      <%= f.label :product_type, class: "form-label" %>
      <%= f.text_field :product_type, class: "form-input" %>
    </div>

    <!-- Price -->
    <div class="field">
      <%= f.label :price, class: "form-label" %>
      <%= f.number_field :price, class: "form-input" %>
    </div>

    <!-- Submit Button -->
    <div class="form-actions">
      <%= f.submit "Update Product", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>