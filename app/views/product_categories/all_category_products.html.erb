
<%=flash[:notice]%>

<h1>All Seller Products</h1>

<%@products.each do |product|%>

<% if product.image.attached? %>
  <%= image_tag product.image, alt: "Product Image" %>
<% else %>
  <p>No Image Available</p>
<% end %>

<%=product.product_name%>
<br>
<%=product.brand_name%>
<br>
<%=product.price%>

<%=link_to "edit",edit_product_category_path(product)%>
<%= link_to "Delete", seller_destroy_product_path(product) %>


<%end%>