<%= flash[:notice] %>

<h1>All Seller Products</h1>

<div class="seller-product-container">
  <% @products.each do |product| %>
    <div class="seller-product-card">
      <% if product.image.attached? %>
        <%= image_tag product.image, alt: "Product Image", class: "seller-product-image" %>
      <% else %>
        <div class="no-image">No Image Available</div>
      <% end %>

      <div class="seller-product-info">
        <h3 class="product-name"><%= product.product_name %></h3>
        <p class="brand-name"><%= product.brand_name %></p>
        <p class="price">â‚¹<%= product.price %></p>

        <div class="button-container">
          <%= link_to "Edit", edit_product_category_path(product), class: "btn btn-edit" %>
          <%= link_to "Delete", seller_destroy_product_path(product), class: "btn btn-delete", data: { confirm: "Are you sure you want to delete this product?" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
