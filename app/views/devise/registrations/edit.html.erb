<h2 class="edit-heading">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input-group">
    <%= f.label :email, class: "input-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="confirmation-alert">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="input-group">
    <%= f.label :password, class: "input-label" %> <i class="hint-text">(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
    <% if @minimum_password_length %>
      <em class="password-hint"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="input-group">
    <%= f.label :password_confirmation, class: "input-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
  </div>

  <div class="input-group">
    <%= f.label :current_password, class: "input-label" %> <i class="hint-text">(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "input-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "submit-btn" %>
  </div>
<% end %>

<h3 class="cancel-heading">Cancel My Account</h3>
<p class="cancel-text">Unhappy? You can delete your account.</p>
<%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "cancel-btn" %>

<%= link_to "Back", :back, class: "back-link" %>
