<h2 class="signup-heading">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input-group">
    <%= f.label :first_name, class: "input-label" %>
    <%= f.text_field :first_name, class: "input-field" %>
  </div>

  <div class="input-group">
    <%= f.label :last_name, class: "input-label" %>
    <%= f.text_field :last_name, class: "input-field" %>
  </div>

  <div class="input-group">
    <%= f.label :email, class: "input-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
  </div>

  <div class="input-group">
    <%= f.label :password, class: "input-label" %>
    <% if @minimum_password_length %>
      <em class="password-hint">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
  </div>

  <div class="input-group">
    <%= f.label :password_confirmation, class: "input-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
  </div>

  <div class="input-group role-group">
    <%= f.label :role, class: "input-label" %><br>
    <label class="role-option">
      <%= f.radio_button :role, "User", class: "radio-input" %> User
    </label>
    <label class="role-option">
      <%= f.radio_button :role, "Seller", class: "radio-input" %> Seller
    </label>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up", class: "submit-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

